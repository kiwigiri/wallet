<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:background="@color/rojocoopeuch"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/logocoopeuch"
                    android:layout_width="130dp"
                    android:layout_height="30dp"/>
                <LinearLayout
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/favorite"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/favorite_amarillo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>



            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:paddingEnd="20dp"
                android:textStyle="bold"
                android:text="dÃ©bito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/numtarjeta"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="5241   0100   1468   1857"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/fechatarjeta"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="09/24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/nombreUsu"
                    android:gravity="bottom"
                    android:paddingBottom="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="MARIA TERESA HENRIQUEZ"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>


                <LinearLayout
                    android:layout_weight="10"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:paddingRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/mastercard"
                        android:layout_width="110dp"
                        android:layout_height="50dp"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>


